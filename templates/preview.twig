{% extends 'base.twig' %}

{% block title %}
  {% trans %}preview.title{% endtrans %}
{% endblock %}

{% block nav %}
  {% if authenticated and not navbar_hide %}
    {{ parent() }}
  {%  endif %}
{% endblock %}

{% block scripts %}
  {{ parent() }}
  <script src="static/js/preview.js"></script>
  <script src="static/js/diff_match_patch.js"></script>
  <script src="static/js/diff.js"></script>
{% endblock %}

{% block body %}
  <nav class="navbar navbar-expand navbar-light bg-light navbar-toolbar">
    <ul class="nav navbar-nav mr-auto">
      <li class="nav-item"><a class="nav-link" href="?page=index"><i class="far fa-arrow-alt-circle-left"></i>&nbsp;{% trans %}preview.nav.back{% endtrans %}</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      {% if reportfp or reportfn %}
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-ban"></i>&nbsp;{% trans %}preview.nav.report.title{% endtrans %}</a>
          <div class="dropdown-menu dropdown-menu-right" role="menu">
            {% if reportfp %}<a class="dropdown-item" href="{{ app.request.uri }}&report=1&reporttype=fp">{% trans %}preview.nav.report.option.fp{% endtrans %}</a>{% endif %}
            {% if reportfpfile %}<a class="dropdown-item" href="{{ app.request.uri }}&report=1&reporttype=fp&file=1">{% trans %}preview.nav.report.option.fpfile{% endtrans %}</a>{% endif %}
            {% if reportfn %}<a class="dropdown-item" href="{{ app.request.uri }}&report=1&reporttype=fn&file=1">{% trans %}preview.nav.report.option.fn{% endtrans %}</a>{% endif %}
          </div>
        </li>
      {% endif %}
      {% if found_in_node and (msg_action in ['QUEUE', 'QUARANTINE']) and not pending_action_type and not errors.database is defined %}
        {% if 'preview-mail-body' not in disabled_features %}
          {% if 'preview-mail-body-original' not in disabled_features %}
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button"><i class="fa fa-download"></i>&nbsp;{% trans %}preview.nav.download.title{% endtrans %}</a>
              <div class="dropdown-menu" role="menu">
                <a class="dropdown-item" href="?page=download&id={{ mail.msgid }}:{{ mail.msgactionid }}&node={{ node_id }}&index={{ index }}">{% trans %}preview.nav.download.option.modified{% endtrans %}</a>
                <a class="dropdown-item" href="?page=download&original=1&id={{ mail.msgid }}:{{ mail.msgactionid }}&node={{ node_id }}&index={{ index }}">{% trans %}preview.nav.download.option.original{% endtrans %}</a>
              </div>
            </li>
          {% else %}
            <li class="nav-item"><a class="nav-link" href="?page=download&id={{ mail.msgid }}:{{ mail.msgactionid }}&node={{ node_id }}&&index={{ index }}"><i class="fa fa-download"></i>&nbsp;{% trans %}preview.nav.download.title{% endtrans %}</a></li>
          {% endif %}
        {% endif %}
        <li class="divider"></li>
        <li class="nav-item"><a class="nav-link" href="#" data-action="delete"><i class="far fa-trash-alt"></i>&nbsp;{% trans %}preview.nav.actions.delete{% endtrans %}</a></li>
        <li class="nav-item"><a class="nav-link" href="#" data-action="bounce"><i class="fa fa-reply"></i>&nbsp;{% trans %}preview.nav.actions.bounce{% endtrans %}</a></li>
        <li class="nav-item"><a class="nav-link" href="#" data-action="retry"><i class="fa fa-share"></i>&nbsp;{% if msg_action=='QUARANTINE' or msg_action=='ARCHIVE' %}{% trans %}preview.nav.actions.release{% endtrans %}{% else %}{% trans %}preview.nav.actions.retry{% endtrans %}{% endif %}</a></li>
      {% endif %}
      {% if 'preview-textlog' not in disabled_features and feature_textlog and (is_superadmin or textlog_access) %}
        <li class="nav-item"><a class="nav-link" href="?page=log&id={{ mail.id }}&index={{ index }}"><i class="far fa-file-alt"></i>&nbsp;{% trans %}preview.nav.textlog{% endtrans %}</a></li>
      {% endif %}
    </ul>
  </nav>

  <div class="container-fluid pt-3">
    {% for error in errors %}
      <div class="alert alert-danger"><i class="far fa-exlamation"></i>&nbsp;{{ error }}</div>
    {% endfor %}
    {% if pending_action_type %}
      <div class="alert alert-info"><i class="far fa-clock"></i>&nbsp;Message has a pending <span class="font-weight-bold">{{ pending_action_type }}</span> action.</div>
    {% endif %}
    <div class="row">
      <div class="col-lg-6">
        <div class="card mb-3">
          <div class="card-header">
            {% trans %}preview.card.details.title{% endtrans %}
          </div>
          <div class="card-body">
            <dl class="preview-details row">
              <dt class="col-sm-3">{% trans %}preview.card.details.fields.action{% endtrans %}</dt><dd class="col-sm-9">
                <span class="fa-stack" style="font-size: 10px;">
                  <i class="fa fa-square fa-stack-2x" style="color: {{ action_color }};"></i>
                  <i class="{{ action_icon }} fa-lg fa-stack-1x" style="color:#fff;"></i>
                </span>
                {{ msg_action }}
              </dd>
              <dt class="col-sm-3">{% trans %}preview.card.details.fields.from{% endtrans %}</dt><dd class="col-sm-9 wrap">{{ mail.msgfrom }}</dd>
              <dt class="col-sm-3">{% trans %}preview.card.details.fields.to{% endtrans %}</dt><dd class="col-sm-9 wrap">{{ mail.msgto }}</dd>
              <dt class="col-sm-3">{% trans %}preview.card.details.fields.subject{% endtrans %}</dt><dd class="col-sm-9 wrap">{{ mail.msgsubject }}</dd>
              <dt class="col-sm-3">{% trans %}preview.card.details.fields.date{% endtrans %}</dt><dd class="col-sm-9">{{ time|date('Y-m-d H:i:s') }}</dd>
              <dt class="col-sm-3">{% trans %}preview.card.details.fields.size{% endtrans %}</dt><dd class="col-sm-9 wrap" title="{{ mail.msgsize }} bytes">{{ mail.msgsize }}</dd>
              <dt class="col-sm-3">{% trans %}preview.card.details.fields.details{% endtrans %}</dt>
              <dd class="col-sm-9">
                {% if mail.queue.action %}
                  {{ mail.queue.errormsg }}
                {% elseif mail.doc.msgaction == 'QUEUE' %}
                  {% trans with {'%count%': mail.retry ? mail.retry : 0 } %}index.table.tbody.msgaction.queue{% endtrans %} <span class="text-muted">{{ mail.queue.errormsg }}</span>
                {% else %}
                  {{ mail.msgdescription }}
                {% endif %}
              </dd>
              {% if listener %}<dt class="col-sm-3">{% trans %}preview.card.details.fields.listener{% endtrans %}</dt><dd class="col-sm-9">{{ listener }}</dd>{% endif %}
              <dt class="col-sm-3">{% trans %}preview.card.details.fields.server{% endtrans %}</dt><dd class="col-sm-9">{% if geoip.isocode is defined %}<span class="flag-icon flag-icon-{{ geoip.isocode }}" title="{{ geoip.name }}"></span> {% endif %}{{ mail.msgfromserver }}</dd>
              {% if mail.msgsasl %}<dt class="col-sm-3">{% trans %}preview.card.details.fields.user{% endtrans %}</dt><dd class="col-sm-9">{{ mail.msgsasl }}</dd>{% endif %}
              {% if transport %}<dt class="col-sm-3">{% trans %}preview.card.details.fields.transport{% endtrans %}</dt><dd class="col-sm-9">{{ transport }}</dd>{% endif %}
              <dt class="col-sm-3">{% trans %}preview.card.details.fields.id{% endtrans %}</dt><dd class="col-sm-9">{{ mail.msgid }}</dd>
            </dl>
          </div>
        </div>

        {% if not msg_mailflow is empty %}
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">{% trans %}preview.card.flow.title{% endtrans %}</h5>
            <table class="table table-fixed table-striped">
              <thead>
                <tr>
                  <th>{% trans %}preview.card.flow.thead.action{% endtrans %}</th>
                  <th>{% trans %}preview.card.flow.thead.status{% endtrans %}</th>
                  <th style="width: 150px">{% trans %}preview.card.flow.thead.date{% endtrans %}</th>
                </tr>
              </thead>
              <tbody>
                {% for i in msg_mailflow %}
                {% if i.action == 'QUEUE' or i.action == 'QUARANTINE' %}
                  {% set queued = 1 %}
                {% else %}
                  {% set queued = 0 %}
                {% endif %}
                <tr>
                  <td>
                    <span class="fa-stack fa-fw" style="font-size: 0.75rem;">
                      <i class="fa fa-square fa-stack-2x" style="color: {{ action_colors.action }};"></i>
                      <i class="{{ action_icons.action }} fa-lg fa-stack-1x" style="color:#fff;"></i>
                    </span>
                    {{ i.action }}{% if i|last and queued == 1 %}&nbsp;<i class="text-muted">({% trans %}preview.card.flow.tbody.status{% endtrans %})</i>{% endif %}
                  </td>
                  <td>
                    <span class="text-muted" title="{{ i.details }}">{{ i.details }}</span>
                  </td>
                  <td>
                    <span title="{{ i.ts0|date('Y-m-d H:i:s') }}">{{ i.ts0|date('Y-m-d H:i:s') }}</span>
                  </td>
                </tr>
                {% if not i|last %}
                <tr>
                  <td colspan="3" style="padding-top: 1px; padding-bottom: 1px;">
                    <i class="fa fa-arrow-down fa-fw"></i>
                  </td>
                </tr>
                {% else %}
                <tr>
                  <td colspan="3" style="height: 3px; padding: 0px; {% if queued == 1 %}background: repeating-linear-gradient(-45deg, {{ action_colors.action }}, {{ action_colors.action }} 10px, #fff 10px, #fff 20px);{else}background-color: {{ action_colors.action }}{% endif %}"></td>
                </tr>
                {% endif %}
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
        {% endif %}

        {% if found_in_node %}
          {% if header %}
          <div class="card mb-3">
            <div class="card-header">
              <span>{% trans %}preview.card.content.headers.title{% endtrans %}</span>
            </div>
            <div class="card-body">
              <div class="preview-headers text-muted wrap">{{header}}</div>
            </div>
          </div>
          {% endif %}
        {% endif %}
      </div>

      <div class="col-lg-6">
        {% if found_in_node %}
          <div class="card mb-3">
            <div class="card-header">
              {% if 'preview-mail-body' not in disabled_features and 'preview-mail-body-original' not in disabled_features %}
              <div class="float-right">
                {% if not show_original %}
                  {% trans with {'%original_link%': show_original_link|raw } %}preview.card.content.source.original{% endtrans %}
                {% else %}
                  {% trans with {'%modified_link%': show_modified_link|raw } %}preview.card.content.source.modified{% endtrans %}
                {% endif %}
              </div>
              {% endif %}
              <span style="white-space: nowrap;">{% if mail.msgsubject %}{{ mail.msgsubject }}{% else %}<span class="text-muted">{% trans %}preview.card.content.state.nosubject{% endtrans %}</span>{% endif %}</span>
            </div>
            <div class="card-body">
              {% if 'preview-mail-body' in disabled_features %}
                <div class="card-text msg-body"><p class="text-muted text-center">{% trans %}preview.card.content.state.nopermission.title{% endtrans %}<br><small>{% trans %}preview.card.content.state.nopermission.message{% endtrans %}</small></p></div>
              {% elseif not body is defined %}
                <div class="card-text msg-body"><p class="text-muted text-center">{% trans %}preview.card.content.state.unavailable.title{% endtrans %}<br><small>{% trans %}preview.card.content.state.unavailable.message{% endtrans %}</small></p></div>
              {% elseif encode == 'TEXT' %}
                <pre class="card-text msg-body">{{ body }}</pre>
              {% elseif encode == 'HTML' or encode == 'ERROR' %}
                {% if use_iframe == true %}
                  <iframe id="preview-html" sandbox srcdoc="{{ body }}" class="panel-body msg-body-iframe"></iframe>
                  <script>
                    var updateSize = function() {
                      $("#preview-html").css("height", $(window).height() * 0.4);
                    }
                    $(updateSize);
                    $(window).resize(updateSize);
                  </script>
                {% else %}
                  <div class="card-text msg-body">{{ body }}</div>
                {% endif %}
              {% endif %}
              {% if attachments %}
              <div class="card-footer">
                <ul class="list-inline">
                  {% for attachment in attachments %}
                    <li class="nowrap">
                      <i class="fa fa-{{ attachment.icon }}"></i>
                      {{ attachment.name }}&nbsp;<small class="text-muted">({{ attachment.size }})</small>
                    </li>
                  {% endfor %}
                </ul>
              </div>
              {% endif %}

              {% if (body is defined and encode == 'HTML') or show_text %}
                <span style="float:right;">
                {% if encode == 'HTML' %}
                  {% trans with {'%text_link%': show_text_link|raw } %}preview.card.content.type.plain{% endtrans %}
                {% endif %}
                {% if show_text %}
                  {% trans with {'%html_link%': show_html_link|raw } %}preview.card.content.type.html{% endtrans %}
                {% endif %}
                </span>
              {% endif %}

            </div>
          </div>
        {% endif %}

        {% if feature_scores and scores %}
        <div class="card mb-3">
          <div class="card-header">
            {% trans %}preview.card.scores.title{% endtrans %}
          </div>
          <table class="table mb-0">
            <thead>
              <tr>
                <th>{% trans %}preview.card.scores.thead.engine{% endtrans %}</th>
                <th>{% trans %}preview.card.scores.thead.result{% endtrans %}</th>
                <th class="d-none d-sm-table-cell">{% trans %}preview.card.scores.thead.signature{% endtrans %}</th>
              </tr>
            </thead>
            <tbody>
            {% for score in scores %}
              <tr>
                <td>{{ score.name }}</td>
                <td>{{ score.score }}</td>
                <td class="text-muted d-none d-sm-table-cell wrap">{{ score.text }}</td>
              </tr>
            {% else %}
              <tr>
                <td colspan="3" class="text-muted text-center">{% trans %}preview.card.scores.tbody.empty{% endtrans %}</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
        {% endif %}
        {% if mail.metadata is iterable and not mail.metadata is empty %}
        <div class="card mb-3">
          <div class="card-header">
            {% trans %}preview.card.metadata.title{% endtrans %}
          </div>
          <div class="card-body">
            <dl class="preview-details row">
              {% for key,value in mail.metadata %}
                <dt class="col-sm-3">{{ key }}</dt><dd class="col-sm-9 wrap">{{ value }}</dd>
              {% endfor %}
            </dl>
          </div>
        </div>
        {% endif %}
      </div>

      {% if msg_action in ['QUEUE', 'QUARANTINE'] %}
      <form id="actionform" method="post" action="?page=preview&id={{ mail.id }}&index={{ index }}">
        <input type="hidden" name="action" id="action" value="">
        <input type="hidden" name="referer" id="referer" value="{{ referer }}">
      </form>
      {% endif %}
    </div>
  </div>
{% endblock %}